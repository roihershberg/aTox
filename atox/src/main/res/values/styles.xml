<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.aTox.DayNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorNewPrimary</item>
        <item name="colorSecondary">@color/colorNewSecondary</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <item name="toolbarNavigationButtonStyle">@style/Widget.aTox.Toolbar.Button.Navigation</item>

        <item name="android:statusBarColor" tools:targetApi="21">@android:color/background_dark</item>
    </style>
    <style name="Theme.aTox.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar"/>
    <style name="Theme.aTox.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light"/>

    <style name="Theme.aTox.BlueAppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/Widget.aTox.Toolbar.Button.Navigation.Light</item>
    </style>

    <style name="Widget.aTox.Toolbar.Button.Navigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.aTox.Toolbar.Button.Navigation.Light" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@android:color/white</item>
    </style>

    <style name="OptionGroup">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:elevation" tools:targetApi="21">4dp</item>
    </style>

    <style name="OptionRow">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="OptionItemText">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:padding">18dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="DialogSlideAnimation" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>
